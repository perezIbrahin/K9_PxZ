<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape android:shape="rectangle" >
            <corners android:radius="1dp" />
            <stroke android:width="10dp" android:color="@color/colorAccent" android:dashWidth="5dp" />
            <padding android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp"></padding>

            <solid android:color="@color/colorWhite" />
            <size android:height="60dp" android:width="60dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <stroke android:width="2dp" />
            <stroke android:width="10dp" android:color="@color/colorDeepOrange" android:dashWidth="5dp" />
            <padding android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp"></padding>
            <solid android:color="@color/colorWhite" />
            <size android:height="60dp" android:width="60dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="1000dp" />
            <stroke android:width="2dp" />
            <stroke android:width="10dp" android:color="@color/colorAmber" android:dashWidth="5dp" />
            <padding android:top="20dp" android:bottom="20dp" android:left="20dp" android:right="20dp"></padding>
            <solid android:color="@color/colorWhite" />
            <size android:height="60dp" android:width="60dp" />
        </shape>
    </item>
</selector>