<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/tvTextDialogLoad"
        app:layout_constraintEnd_toEndOf="@+id/tvTextDialogLoad"
        app:layout_constraintStart_toStartOf="@+id/tvTextDialogLoad"
        app:srcCompat="@drawable/ic_baseline_timelapse_57" />

    <TextView
        android:id="@+id/tvDilgLoadRev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTextDialogLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_text_dial_loading"
        android:textAlignment="center"
        android:textSize="@dimen/dim_text_dialog_siderail"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCounterLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textSize="@dimen/dim_text_dialog_siderail"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tvTextDialogLoad"
        app:layout_constraintStart_toStartOf="@+id/tvTextDialogLoad"
        app:layout_constraintTop_toBottomOf="@+id/tvTextDialogLoad" />

</androidx.constraintlayout.widget.ConstraintLayout>